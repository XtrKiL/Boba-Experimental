extends layout

block content

  script(src='easyeditor/jquery.easyeditor.js')
  link(rel='stylesheet',href='easyeditor/easyeditor.css')
  
  script(src='/javascripts/edit.js')
  div(class='flex four')
    div
    div(class='full half-1300 pad')
      div(class='tabs three')
        input(type='radio' name='tabgroupB' checked)#tab-1
        label(class='pseudo button toggle' for='tab-1') Add
        input(type='radio' name='tabgroupB' )#tab-2
        label(class='pseudo button toggle' for='tab-2') View 
        input(type='radio' name='tabgroupB' )#tab-3
        label(class='pseudo button toggle' for='tab-3' style='visibility:hidden' ) Edit
        div(class='row')
          div
            article(class='card', style='margin:1px, padding:20px')#postcard
              div(class='pad')
                h2 Add Post
                hr
                form(action="reviews/addpost", method="post",id='add_form' encType="multipart/form-data")
                  label Title
                  input(type="text", name="title")#t

                  label Image Link
                  input(type="text", name="imagelink")#i
                  input(title="Drop image or click me" type="file" name= "image")
                  label Description
                  textarea#description(name="description", rows="10", placeholder='Enter review')

                  div(class='flex full four-500' style='text-align:center')
                    div
                      label Milk:
                      select(name='ms')
                        option 1
                        option 2
                        option 3
                        option 4
                        option 5
                    div
                      label Tea:
                      select(name='ts')
                        option 1
                        option 2
                        option 3
                        option 4
                        option 5
                    div
                      label Aftertaste:
                      select(name='as')
                        option 1
                        option 2
                        option 3
                        option 4
                        option 5
                    div
                      label Overall:
                      select(name='os')
                        option 1
                        option 2
                        option 3
                        option 4
                        option 5
                  input(disabled='true',type='submit' value='Submit',id='post_submit',style='width:100%')
          div
            article(class ='card' style='margin:1px')
              #userposts
          #editpost
    div